<div class="section">
  <div class="container">
    <div class="columns is-centered">

      <div class="column is-4">
        <h2 class="title is-2">
          Registrese
        </h2>
      

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
          <%= f.error_notification %>

          <div class="field">
            <div class="control"> 
              <%= f.input :name, label:"Nombre", required:true, autofocus:true, input_html: {class:"input"}, wrapper: false, label_html:{class: "label"} %>
            </div>
          </div>

          <div class="field">
            <div class="control"> 
              <%= f.input :username, label:"Nombre de usuario", required:true, input_html: {class:"input"}, wrapper: false, label_html:{class: "label"} %>
            </div>
          </div>
        
          <div class="field">
            <div class="control"> 
              <%= f.input :email, label:"E-mail", required:true, input_html: {class:"input"}, wrapper: false, label_html:{class: "label"} %>
            </div>
          </div>
          
          <div class="field">
            <div class="control"> 
              <%= f.input :password, label:"ContraseÃ±a:", required:true, input_html: {class: "input"}, wrapper: false, label_html: {class:"label"},
              hint: ("#{@minimum_password_length} caracteres minimos." if @minimum_password_length)%>
            </div>
          </div>
                        
          <div class="field">
            <div class="control"> 
              <%= f.input :password_confirmation, label: "Confirmar contraseÃ±a:", required: true, input_html: {class:"input"}, wrapper: false, label_html: {class: "label"} %>
            </div>
          </div>

          <div class="field">
            <div class="control"> 
              <%= f.button :submit, "Actualizar registro", class:"button is-info" %>
            </div>
          </div>
        <% end %>
        <br/>
        
        <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</div>


