<div class="column is-half">
    <article class="media box">
        <figure class="media-left">
            <p class="image is 64x64">
               <img src="https://media.vandal.net/i/ivandal/1200x630/75621/megaman-x-dive-202181915382475_1.jpg" style="width:64px;"alt="img"> 
            </p>
        </figure>
        <div class="media-content">
            <%= render "tweeets/form"%>
        </div>
    </article>


    <% @tweeets.each do |tweeet| %>
        <div class="box">
            <article class="media">
                <div class="media-left">
                    <figure class="image is-64x64">
                        <img src="https://64.media.tumblr.com/7c9a83289473d34653b936d0f91dc866/f138d3dace6c7f7c-94/s400x600/6750312615842e50f8af14f0e1d61b198d46d477.pnj">
                    </figure>
                </div>
                <div class="media-content">
                    <div class="content">
                        <strong>Johan Timan√°: </strong></br>
                        <small>@johantb</small></br>
                        <p><%= tweeet.tweeet %></p>
                    </div>
                    <div class="level">
                        <div class="level-left is-mobile">
                            <%= button_to tweeet, class:"button level-item", style:"border:none" do%>
                                <span class="icon"><i class="fa fa-link" aria-hidden = "true"></i></span>                        
                            <%end%>
                            <%= button_to edit_tweeet_path(tweeet), class:"button level-item", style:"border:none" do%>
                                <span class="icon"><i class="fa fa-pencil" aria-hidden = "true"></i></span>                        
                            <%end%>
                            <%= button_to tweeet, method: :delete, data: { confirm: "Tas seguro mi bra?"} ,class:"button level-item", style:"border:none" do%>
                                <span class="icon"><i class="fa fa-trash" aria-hidden = "true"></i></span>                        
                            <%end%>
                        </div>
                    </div>
                </div>
            </article>
        </div>

    <% end %>
</div>


